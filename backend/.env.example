# Database (prefer DATABASE_URL in production)
DATABASE_URL=
DB_HOST=localhost
DB_PORT=5432
DB_NAME=escrow_platform
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Encryption
# Base64-encoded 32 bytes (openssl rand -base64 32)
ENCRYPTION_MASTER_KEY=

# Upload limits
MAX_UPLOAD_BYTES=26214400
ALLOWED_MIME=image/png,image/jpeg,application/pdf,application/zip

# Auth + Sessions
JWT_SECRET=your_very_secure_jwt_secret_key_here
JWT_EXPIRES_IN=24h
SESSION_SECRET=your_very_secure_session_secret_key_here
# Admin: comma-separated emails that can refund transactions
ADMIN_EMAILS=admin@example.com

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Frontend
FRONTEND_URL=http://localhost:5173

# Server
NODE_ENV=development
PORT=3000
